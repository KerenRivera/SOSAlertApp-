@model IEnumerable<SOS_Alert_App.Models.Contact>
@{
    ViewData["Title"] = "Contactos";
}

<div class="main-container">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="page-title">
            <i class="fas fa-address-book me-3"></i>
            Mis Contactos de Emergencia
        </h1>
        <p class="page-subtitle">
            Gestiona las personas que recibirán tus alertas de emergencia
        </p>
    </div>

    <!-- Stats Cards -->
    <div class="stats-cards">
        <div class="stat-card">
            <div class="stat-number">@(Model?.Count() ?? 0)</div>
            <div class="stat-label">Contactos Activos</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">0</div>
            <div class="stat-label">Alertas Enviadas</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">100%</div>
            <div class="stat-label">Tasa de Entrega</div>
        </div>
    </div>

   
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="create-button">
            <i class="fas fa-plus"></i>
            Crear Nuevo Contacto
        </a>
    </div>

   
    @if (Model?.Any() == true)
    {
        <div class="contacts-table">
            <table class="table table-hover mb-0">
                <thead class="table-header">
                    <tr>
                        <th>
                            <i class="fas fa-user me-2"></i>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            <i class="fas fa-envelope me-2"></i>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            <i class="fas fa-phone me-2"></i>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th><i class="fas fa-cogs me-2"></i>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="contact-name">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="contact-email">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="contact-phone">
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action btn-edit">
                                        <i class="fas fa-edit me-1"></i>Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-action btn-details">
                                        <i class="fas fa-eye me-1"></i>Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action btn-delete">
                                        <i class="fas fa-trash me-1"></i>Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {

        <div class="contacts-table">
            <div class="empty-state">
                <i class="fas fa-address-book"></i>
                <h5>No tienes contactos de emergencia</h5>
                <p>Agrega personas de confianza que puedan ayudarte en caso de emergencia</p>
                <a asp-action="Create" class="create-button">
                    <i class="fas fa-plus"></i>
                    Agregar Primer Contacto
                </a>
            </div>
        </div>
    }
</div>

